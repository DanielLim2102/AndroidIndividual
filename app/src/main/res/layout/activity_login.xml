<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"

    android:orientation="vertical"
    android:background="@drawable/woody"
    tools:context="com.example.danie.daniel2.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="16dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/chamanero"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chamenero"
                android:fontFamily="serif"
                android:textColor="#C9A66B"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe · Cook · Devour"
                android:fontFamily="serif"
                android:textColor="#C9A66B"
                android:layout_gravity="center"
                android:textSize="12sp"
                />

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:background="@drawable/login_textbox"
                android:drawablePadding="18dp"
                android:padding="8dp"
                android:fontFamily="monospace"
                android:hint="Email"
                android:textColorHint="#EBDCB2"
                android:textColor="#EBDCB2"
                android:maxLines="1"
                android:layout_marginTop="15dp"
                android:id="@+id/etEmail"
                android:drawableLeft="@drawable/ic_person_white_24dp"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPassword"
                android:drawablePadding="18dp"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:hint="Password"
                android:textColorHint="#EBDCB2"
                android:textColor="#EBDCB2"
                android:maxLines="1"
                android:background="@drawable/login_textbox"
                android:layout_marginTop="14dp"
                android:drawableLeft="@drawable/ic_lock_white_24dp"/>





            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_login_two"
                android:text="Login"
                android:textColor="@color/caramel"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:id="@+id/btLogin"
                android:fontFamily="monospace"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_marginTop="24dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btSignup"
                android:background="@drawable/background_signup"
                android:text="SignUp"
                android:textColor="@color/caramel"
                android:fontFamily="monospace"
                android:textAllCaps="false"
                android:padding="2dp"
                android:clickable="true"
                android:textSize="18dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="24dp"/>



        </LinearLayout>
    </ScrollView>







</LinearLayout>
